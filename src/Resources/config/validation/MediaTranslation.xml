<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
    http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="Sylius\CmsPlugin\Entity\MediaTranslation">
        <property name="alt">
            <constraint name="Length">
                <option name="min">2</option>
                <option name="max">250</option>
                <option name="minMessage">sylius_cms.media.alt.min_length</option>
                <option name="maxMessage">sylius_cms.media.alt.max_length</option>
                <option name="groups">
                    <value>cms</value>
                </option>
            </constraint>
        </property>

        <property name="link">
            <constraint name="Length">
                <option name="min">2</option>
                <option name="max">250</option>
                <option name="minMessage">sylius_cms.media.link.min_length</option>
                <option name="maxMessage">sylius_cms.media.link.max_length</option>
                <option name="groups">
                    <value>cms</value>
                </option>
            </constraint>
        </property>

        <property name="content">
            <constraint name="Length">
                <option name="min">2</option>
                <option name="minMessage">sylius_cms.media.content.min_length</option>
                <option name="maxMessage">sylius_cms.media.content.max_length</option>
                <option name="groups">
                    <value>cms</value>
                </option>
            </constraint>
        </property>
    </class>
</constraint-mapping>
