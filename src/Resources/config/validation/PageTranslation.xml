<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
    http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="Sylius\CmsPlugin\Entity\PageTranslation">
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">
                <value>slug</value>
                <value>locale</value>
            </option>
            <option name="errorPath">slug</option>
            <option name="groups">
                <value>bitbag</value>
            </option>
            <option name="message">sylius_cms_plugin.page.slug.unique</option>
        </constraint>

        <property name="slug">
            <constraint name="Length">
                <option name="min">2</option>
                <option name="max">250</option>
                <option name="minMessage">sylius_cms_plugin.page.slug.min_length</option>
                <option name="maxMessage">sylius_cms_plugin.page.slug.max_length</option>
                <option name="groups">
                    <value>bitbag</value>
                </option>
            </constraint>
        </property>

        <property name="metaKeywords">
            <constraint name="Length">
                <option name="min">2</option>
                <option name="max">1000</option>
                <option name="minMessage">sylius_cms_plugin.page.meta_keywords.min_length</option>
                <option name="maxMessage">sylius_cms_plugin.page.meta_keywords.max_length</option>
                <option name="groups">
                    <value>bitbag</value>
                </option>
            </constraint>
        </property>

        <property name="metaDescription">
            <constraint name="Length">
                <option name="min">2</option>
                <option name="max">5000</option>
                <option name="minMessage">sylius_cms_plugin.page.meta_description.min_length</option>
                <option name="maxMessage">sylius_cms_plugin.page.meta_description.max_length</option>
                <option name="groups">
                    <value>bitbag</value>
                </option>
            </constraint>
        </property>
    </class>
</constraint-mapping>
