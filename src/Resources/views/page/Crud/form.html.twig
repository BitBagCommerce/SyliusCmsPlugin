{#{% from '@SyliusCmsPlugin/Macro/translationForm.html.twig' import translationFormWithSlug, translationForm %}#}
{% import '@SyliusAdmin/shared/helper/translations.html.twig' as translations %}
{# {% include '@SyliusCmsPlugin/Modal/_resourcePreview.html.twig' %} #}
{% include '@SyliusCmsPlugin/Modal/_loadTemplateConfirmation.html.twig' %}

{% form_theme form '@SyliusCmsPlugin/Form/theme.html.twig' %}

{% set page = hookable_metadata.context.resource %}
{% set prefixes = hookable_metadata.prefixes %}

<div class="container-xl" {{ attributes }}>
    {{ form_start(form, {'attr': {'class': 'ui loadable form', 'novalidate': 'novalidate', 'id': form.vars.id}}) }}
    {% if hookable_metadata.configuration.method is defined %}
        <input type="hidden" name="_method" value="{{ hookable_metadata.configuration.method }}"/>
    {% endif %}
    {{ form_errors(form) }}
    {{ form_widget(form._token) }}

    <div class="card-body">
        <div class="row">
            <div class="col-12 col-md-6">
                <div class="card" data-bb-cms-wrapper>
                    <div class="card-header">
                        <div class="card-title">{{ 'sylius.ui.general'|trans }}</div>
                    </div>
                    <div class="card-body">
                        {{ form_row(form.name) }}
                        {{ form_row(form.code) }}
                        {{ form_row(form.enabled) }}
                        {{ form_row(form.channels) }}
                        {{ form_row(form.collections) }}
                        {{ form_row(form.publishAt) }}
                        <a href="#" data-bb-cms-preview-btn class="btn btn-primary cms-resource-preview"
                           data-url="{{ path('sylius_cms_admin_page_preview', {'id': form.vars.data.id}) }}">
                            {{ 'sylius_cms.ui.preview'|trans }}
                        </a>
                    </div>
                </div>
                <div class="card mt-3">
                    <div class="card-header">
                        <div class="card-title">
                            {{ 'sylius_cms.ui.teaser.header'|trans }}
                            <span class="help-text">- {{ 'sylius_cms.ui.teaser.help'|trans }}</span>
                        </div>
                    </div>
                    <div class="card-body">
                        {{ translations.with_hook(
                            translation_form_reduce(form.translations, ['teaserTitle', 'teaserContent', 'teaserImage']),
                            prefixes,
                            null,
                            {
                                accordion_id: 'page-teaser-translations',
                                accordion_flush: true
                            }
                        ) }}
                    </div>
                </div>
{#                <div class="ui segment">#}
{#                    <h4 class="ui dividing header">{{ 'sylius_cms.ui.seo'|trans }}</h4>#}
{#                    {{ translationFormWithSlug(#}
{#                        translation_form_reduce(form.translations, ['title', 'slug', 'metaKeywords', 'metaDescription']),#}
{#                        '@SyliusCmsPlugin/Page/Crud/_slugField.html.twig',#}
{#                        page#}
{#                    ) }}#}
{#                </div>#}
            </div>
            <div class="col-12 col-md-6">
                <div class="ui segment">
                    <h4 class="ui dividing header">{{ 'sylius_cms.ui.content_elements.title'|trans }}</h4>
                    <div class="ui segment">
                        {% include '@SyliusCmsPlugin/Locale/form.html.twig' %}
                        {% include '@SyliusCmsPlugin/Template/form.html.twig' %}
                    </div>
                    {% include '@SyliusCmsPlugin/ContentTemplate/form.html.twig' with {ajax_url: path('sylius_cms_admin_ajax_template_content_by_id', {'id': 'REPLACE_ID'}) } %}
                    <div class="ui one column stackable grid">
                        <div class="column">
                            {{ form_row(form.contentElements) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

