{% block sylius_media_autocomplete_choice_row %}
    <div
        class="{% if required %}required {% endif %}field{% if (not compound or force_error|default(false)) and not valid %} error{% endif %}"
        data-bb-target="cms-handle-autocomplete"
    >
        {{- form_label(form) -}}
        <div
            class="cms-media-autocomplete ui fluid search selection dropdown {% if multiple %}multiple{% endif %}"
            data-url="{{ path('sylius_cms_admin_ajax_media_by_name_phrase', {
            'mediaType': form.vars.media_type,
        })}}"
            data-autocomplete
            data-choice-name="{{ choice_name }}"
            data-choice-value="{{ choice_value }}"
            data-criteria-type="{{ remote_criteria_type }}"
            data-criteria-name="{{ remote_criteria_name }}"
            data-load-edit-url="{{ path('sylius_cms_admin_ajax_media_by_code') }}"
            data-name-message ="{{ 'sylius_cms.ui.empty_name'|trans }}"
        >
            {{- form_widget(form, {'attr': {'class': 'autocomplete'}}) -}}
            <span class="btn-delete is-hidden" data-delete-selected>X</span>
            <i class="dropdown icon"></i>
            <input class="search" type="text" value="{% if placeholder is defined %} {{ placeholder|trans }} {% endif %}" autocomplete="off" data-image-select>
            <div class="default text" data-placeholder>{% if placeholder is defined %} {{ placeholder|trans }} {% endif %}</div>
            <div class="menu" data-selection-menu></div>
        </div>
        {{- form_errors(form) -}}
    </div>
{% endblock %}

