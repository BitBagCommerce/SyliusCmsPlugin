{% form_theme form '@SyliusCmsPlugin/Form/theme.html.twig' %}
<div class="cms-import" data-bb-cms-wrapper data-bb-target="cms-import">
    <form method="POST" enctype="multipart/form-data" action="{{ path('sylius_cms_admin_import_data', {'resourceName': app.request.get('resourceName')}) }}" novalidate="novalidate" class="ui form">

        <div class="ui action input">
            <input type="text" placeholder="{{ 'sylius_cms.ui.csv_file'|trans }}" data-bb-cms-text="text" readonly>

            {{ form_widget(form.file, { 'attr': {'data-bb-cms-file': 'file'} }) }}

            <button class="ui teal left labeled icon button">
                <i class="upload icon"></i>
                {{ 'sylius_cms.ui.import'|trans }}
            </button>
        </div>

        {{ form_widget(form._token) }}
    </form>
</div>
