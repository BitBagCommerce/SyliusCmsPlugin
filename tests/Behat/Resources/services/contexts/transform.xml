<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" />

            <service id="bitbag_sylius_cms_plugin.behat.context.transform.block" class="Tests\Sylius\CmsPlugin\Behat\Context\Transform\BlockContext">
                <argument type="service" id="bitbag_sylius_cms_plugin.repository.block" />
                <argument>%locale%</argument>
            </service>

            <service id="bitbag_sylius_cms_plugin.behat.context.transform.media" class="Tests\Sylius\CmsPlugin\Behat\Context\Transform\MediaContext">
                <argument type="service" id="bitbag_sylius_cms_plugin.repository.media" />
                <argument type="service" id="sylius.behat.shared_storage" />
            </service>

            <service id="bitbag_sylius_cms_plugin.behat.context.transform.page" class="Tests\Sylius\CmsPlugin\Behat\Context\Transform\PageContext">
                <argument type="service" id="bitbag_sylius_cms_plugin.repository.page" />
                <argument>%locale%</argument>
            </service>

            <service id="bitbag_sylius_cms_plugin.behat.context.transform.collection" class="Tests\Sylius\CmsPlugin\Behat\Context\Transform\CollectionContext">
                <argument type="service" id="bitbag_sylius_cms_plugin.repository.collection" />
                <argument>%locale%</argument>
            </service>
    </services>
</container>
