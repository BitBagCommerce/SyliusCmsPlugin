{
    "name": "bitbag/cms-plugin",
    "type": "sylius-plugin",
    "keywords": [
        "sylius",
        "sylius-plugin",
        "sylius-cms"
    ],
    "description": "CMS plugin for Sylius applications.",
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "sylius/sylius": "~1.11.0 || ~1.12.0",
        "league/csv": "^9.1",
        "friendsofsymfony/ckeditor-bundle": "^1.1 || ^2.0",
        "instaclick/php-webdriver": "^1.4",
        "symfony/webpack-encore-bundle": "^1.12"
    },
    "require-dev": {
        "behat/behat": "^3.7",
        "behat/mink-selenium2-driver": "^1.4",
        "bitbag/coding-standard": "^1.0",
        "dmore/behat-chrome-extension": "^1.3",
        "dmore/chrome-mink-driver": "^2.7",
        "friends-of-behat/mink": "^1.8",
        "friends-of-behat/mink-browserkit-driver": "^1.4",
        "friends-of-behat/mink-debug-extension": "^2.0",
        "friends-of-behat/mink-extension": "^2.4",
        "friends-of-behat/page-object-extension": "^0.3",
        "friends-of-behat/suite-settings-extension": "^1.0",
        "friends-of-behat/symfony-extension": "^2.1",
        "friends-of-behat/variadic-extension": "^1.3",
        "lchrusciel/api-test-case": "^4.1 || ^5.0",
        "phpspec/phpspec": "^7.0",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "0.12.99",
        "phpstan/phpstan-doctrine": "0.12.33",
        "phpstan/phpstan-strict-rules": "^0.12.0",
        "phpstan/phpstan-webmozart-assert": "0.12.12",
        "phpunit/phpunit": "^9.5",
        "sylius-labs/coding-standard": "^4.0",
        "symfony/browser-kit": "^5.4 || ^6.0",
        "symfony/debug-bundle": "^5.4 || ^6.0",
        "symfony/dotenv": "^5.4 || ^6.0",
        "symfony/intl": "^5.4 || ^6.0",
        "symfony/web-profiler-bundle": "^5.4 || ^6.0",
        "league/flysystem-bundle": "2.4.0",
        "sylius/mailer-bundle":  "^1.8 || ^2.0@beta",
        "matthiasnoback/symfony-config-test": "^4.3",
        "polishsymfonycommunity/symfony-mocker-container": "^1.0",
        "twig/twig": "^2.10.0"
    },
    "conflict": {
        "symfony/symfony": "4.1.8",
        "symfony/browser-kit": "4.1.8",
        "symfony/dom-crawler": "4.1.8",
        "symfony/routing": "4.1.8",
        "symfony/doctrine-bridge": "4.4.16",
        "doctrine/orm": ">=2.15.2"
    },
    
    "suggest": {
        "stefandoorn/sitemap-plugin": "^2.0@alpha"
    },
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "BitBag\\SyliusCmsPlugin\\": "src/",
            "Tests\\BitBag\\SyliusCmsPlugin\\": "tests/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "spec\\BitBag\\SyliusCmsPlugin\\": "spec/"
        },
        "classmap": ["tests/Application/Kernel.php"]
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "symfony/thanks": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        }
    }
}
